<engine>
  <log level="3" file="/var/log/vigraph/engine.log"
       timestamp="%a %d %b %H:%M:%*S [%*L]: "/>

  <!-- Resources -->
  <resources>
    <directory path="." />
  </resources>

  <!-- Loadable modules -->
  <modules>
    <!-- Search paths, recursive for all .so -->
    <directory path="../build-debug/modules/"/>
  </modules>

  <!-- Tick frequency (Hz, 25) -->
  <tick frequency="25"/>

  <!-- Built-in web server for UI -->
  <file-server>

    <!-- HTTP port -->
    <http port="33380"/>

    <!-- Root directory for files -->
    <directory path="../../ui/web/build"/>

  </file-server>

  <!-- HTTP REST interface -->
  <rest>

    <!-- HTTP port -->
    <http port="33381"/>

    <!-- URL prefix, including leading and trailing / -->
    <url prefix="/"/>

    <!-- Layout file -->
    <layout file="/var/tmp/vigraph-layout.json"/>

  </rest>

</engine>
